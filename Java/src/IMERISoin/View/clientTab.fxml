    <SplitPane dividerPositions="0.49150622876557193">
        <AnchorPane minWidth="300.0">
            <Button fx:id="clientNewButton" layoutX="22.0" layoutY="373.0" mnemonicParsing="false"
                    text="new Patient"/>
            <Label layoutX="21.0" layoutY="20.0" text="Name"/>
            <TextField fx:id="clientNameField" layoutX="18.0" layoutY="37.0"/>
            <Label layoutX="21.0" layoutY="79.0" text="Status"/>
            <ChoiceBox fx:id="clientStatusBox" layoutX="21.0" layoutY="96.0" prefWidth="150.0"/>
